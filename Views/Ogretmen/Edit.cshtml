@model Ogretmen

<h2>Öğretmen Kayıt Düzenleme</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Öğretmen Adı</label>
                <input asp-for="Ad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Öğretmen Soyadı</label>
                <input asp-for="Soyad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Öğretmen Epostası</label>
                <input asp-for="Eposta" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Öğretmen Telefonu</label>
                <input asp-for="Telefon" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">İşe Başlama Tarihi</label>
                <input asp-for="BaslamaTarihi" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
</div>